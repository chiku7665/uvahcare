<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/llnotify"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/carViewnotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardCornerRadius="20dp"
        cardView:cardElevation="8dp"
        android:layout_margin="15dp"
        cardView:cardBackgroundColor="#87CEEB"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/blogerpicnotify"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/prof"/>
            <TextView
                android:id="@+id/titlenotify"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="the title of this notification will be present in the tite"
                />
            <ImageView
                android:id="@+id/postnotify"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/profile"/>
        </LinearLayout>
        "
    </androidx.cardview.widget.CardView>
</LinearLayout>
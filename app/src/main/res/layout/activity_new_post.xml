<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView2="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:cardView="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="ADD YOUR POST DETAILS"
            android:textColor="#000000"
            android:layout_margin="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="CHOOSE THE BLOG TYPE"
            android:textColor="#000000"
            android:layout_margin="10dp"></TextView>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:prompt="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ADD THE TITLE"
            android:textColor="#000000"
            android:layout_margin="10dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/carView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardView2:cardCornerRadius="2dp"
            cardView2:cardElevation="8dp"
            android:layout_margin="10dp"
            cardView2:cardBackgroundColor="#FFFFFF"
            >

            <EditText
                android:id="@+id/heading"
                android:inputType="textMultiLine"
                android:lines="1"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ADD THE BRIEF OVERVIEW"
            android:textColor="#000000"
            android:layout_margin="10dp"></TextView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardView2:cardCornerRadius="2dp"
            cardView2:cardElevation="8dp"
            android:layout_margin="10dp"
            cardView2:cardBackgroundColor="#FFFFFF"
            >
            <EditText
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="10"
                android:minLines="2" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/ldescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ADD IN DETAIL DESCRIPTION"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >
                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:maxLines="10"
                    android:minLines="5" />



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lbenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ADD BENEFITS OF YOGA"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >
                <EditText
                    android:id="@+id/benefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:maxLines="10"
                    android:minLines="5" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lhow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="HOW TO DO?"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >

                <EditText
                    android:id="@+id/howtodo"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lproblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="PROBLEM OR DISEASE DESCRIPTION"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >

                <EditText
                    android:id="@+id/problem"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lsolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="SOLUTION DESCRIPTION"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >

                <EditText
                    android:id="@+id/solution"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lprecautions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ADD PRECAUTIONS"
                android:textColor="#000000"
                android:layout_margin="10dp"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView2:cardCornerRadius="2dp"
                cardView2:cardElevation="8dp"
                android:layout_margin="10dp"
                cardView2:cardBackgroundColor="#FFFFFF"
                >

                <EditText
                    android:id="@+id/precautions"
                    android:inputType="textMultiLine"
                    android:lines="25"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="UPLOAD IMAGE"
            android:textColor="#000000"
            android:layout_margin="10dp"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardView2:cardCornerRadius="2dp"
            cardView2:cardElevation="8dp"
            android:layout_margin="10dp"
            cardView2:cardBackgroundColor="#FFFFFF"
            >

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnbrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Browse"/>
        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text = "upload post"
            android:onClick="display"/>
        <TextView
            android:id="@+id/txtPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="10dp"> </TextView>


    </LinearLayout>
</ScrollView>
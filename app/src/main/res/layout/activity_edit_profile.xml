<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <com.google.android.material.button.MaterialButton
        cardView:strokeColor="@color/teal_200"
        android:textColor="#000000"
        android:textStyle="bold"
        android:clickable="false"
        cardView:strokeWidth="2dp"
        cardView:cornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                     My Details                          "
        style="@style/Widget.MaterialComponents.Button.TextButton"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="UserName"
       >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"
            android:lines="1"
            android:maxLines="2"
            android:minLines="1" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="City"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cityProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"
            android:lines="1"
            android:maxLines="2"
            android:minLines="1" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Country"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/countryProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"
            android:lines="1"
            android:maxLines="2"
            android:minLines="1" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="About Me"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aboutmeProfile"
            android:layout_width="match_parent"
            android:minLines="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"

            android:maxLines="2"
             />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile pic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/pic"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:elevation="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <ImageView
        android:id="@+id/imgviewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:scaleType="centerCrop"
                   android:id="@+id/btnbrowseProfile"
                   android:src="@drawable/plus"></ImageButton>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <com.google.android.material.button.MaterialButton
        android:layout_margin="10dp"
        cardView:cornerRadius="20dp"
        android:id="@+id/updateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:onClick="update"
         />
    <com.google.android.material.button.MaterialButton
        cardView:strokeColor="@color/teal_200"
        cardView:strokeWidth="2dp"
        cardView:cornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/nexttoPreference"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
</LinearLayout>
</LinearLayout>
</ScrollView>